<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:padding="0dp"
    tools:context="com.luohao.sportsmeet.activity.MainActivity">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:textSize="35dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF"
        android:text="运动会系统"/>

    <Button
        android:id="@+id/project_registration_button_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="15dp"
        android:textSize="20dp"
        android:text="项目报名"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/search_activity_button_main"
        android:layout_alignStart="@+id/search_activity_button_main"
        android:layout_marginTop="42dp" />

    <Button
        android:id="@+id/out_msg_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="15dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="信息发布"
        android:layout_alignBaseline="@+id/project_registration_button_main"
        android:layout_alignBottom="@+id/project_registration_button_main"
        android:layout_alignStart="@+id/weather_button_main" />

    <Button
        android:id="@+id/weather_button_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="15dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="天气查询"
        android:layout_alignBaseline="@+id/search_activity_button_main"
        android:layout_alignBottom="@+id/search_activity_button_main"
        android:layout_alignEnd="@+id/user_msg_main"
        android:layout_marginEnd="44dp" />

    <Button
        android:id="@+id/search_activity_button_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="15dp"
        android:textSize="20dp"
        android:text="活动查询"
        android:textColor="#FFFFFF"
        android:layout_marginStart="45dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/user_msg_main"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/user_msg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:padding="30dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/main_title"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/search_activity_button_main" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/user_msg_main"
        android:layout_alignStart="@+id/search_activity_button_main"
        android:layout_above="@+id/search_activity_button_main"
        android:layout_toStartOf="@+id/user_msg_main" />

</RelativeLayout>
