<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.luohao.sportsmeet.activity.RegActivity">

    <TextView
        android:id="@+id/TextReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:textSize="35dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFF"
        android:text="用户注册"/>


    <EditText
        android:id="@+id/username_edit"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextReg"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="number"
        android:maxLines="1"
        android:hint="用户名(学号)"/>
    <EditText
        android:id="@+id/input_password"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_below="@id/username_edit"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="textPassword"
        android:maxLines="1"
        android:hint="密码"/>

    <EditText
        android:id="@+id/enter_password"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_below="@id/input_password"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="textPassword"
        android:maxLines="1"
        android:hint="再次输入密码"/>


    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20dp"
        android:text="取消"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@+id/enter_reg_button"
        android:layout_alignBottom="@+id/enter_reg_button"
        android:layout_alignEnd="@+id/enter_password"
        android:layout_marginEnd="49dp" />

    <Button
        android:id="@+id/enter_reg_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20dp"
        android:text="注册"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:layout_below="@id/enter_password"
        android:layout_toStartOf="@id/exit_button"
        android:layout_marginEnd="63dp" />

</RelativeLayout>
